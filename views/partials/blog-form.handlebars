<form id="New-Blog" class="max-w-sm w-full lg:max-w-full lg:flex m-5" method="POST" action="/api/post">
    <div class="border border-teal-400 lg:border-teal-400 bg-white rounded lg:rounded p-4 flex flex-col justify-between leading-normal 
        max-w-sm w-full lg:max-w-full">
        <div class="mb-8 object-fill">
            <label>Blog Title</label>
            <input class="font-bold text-xl mb-2 bg-teal-500 text-white p-1 rounded
                max-w-sm w-full lg:max-w-full" type="text" id="Blog-Title"
                minlength="5" maxlength="255" required="true"/>
            <label>Blog Content</label>
            <textarea class="border border-grey-200 max-w-sm w-full lg:max-w-full"
                id="Blog-Content" minlength="50" maxlength="5000" required="true"></textarea>
        </div>
        <div class="flex items-center">
            <div class="text-sm">
                <button
                    class="shadow bg-teal-500 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                    type="submit">
                    Add Blog
                </button>
            </div>
        </div>
    </div>
</form>

<script src="/scripts/blog.js"></script>