<div class="flex m-5">
    <form id="Sign-Up" class="w-full max-w-sm" method="POST" action="/api/user">
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-teal-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="New-UserName">
                    User Name
                </label>
            </div>
            <div class="md:w-2/3">
                <input
                    class="bg-teal-200 appearance-none border-2 border-teal-200 rounded w-full py-2 px-4 text-grey leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
                    id="New-UserName" type="text" value="Jane Doe" required="true">
            </div>
        </div>
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-teal-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="New-Password">
                    Password
                </label>
            </div>
            <div class="md:w-2/3">
                <input
                    class="bg-teal-200 appearance-none border-2 border-teal-200 rounded w-full py-2 px-4 text-grey leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
                    id="New-Password" type="password" placeholder="******************" required="true">
            </div>
        </div>
        <div class="md:flex md:items-center">
            <div class="md:w-1/3"></div>
            <div class="md:w-2/3">
                <button
                    class="shadow bg-teal-500 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                    type="submit">
                    Sign Up
                </button>
            </div>
        </div>
    </form>
    <form id="Login" class="w-full max-w-sm" method="POST" action="/api/user/login">
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-teal-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="Login-Username">
                    User Name
                </label>
            </div>
            <div class="md:w-2/3">
                <input
                    class="bg-teal-200 appearance-none border-2 border-teal-200 rounded w-full py-2 px-4 text-grey leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
                    id="Login-Username" type="text" value="Jane Doe" required="true">
            </div>
        </div>
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-teal-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="Login-Password">
                    Password
                </label>
            </div>
            <div class="md:w-2/3">
                <input
                    class="bg-teal-200 appearance-none border-2 border-teal-200 rounded w-full py-2 px-4 text-grey leading-tight focus:outline-none focus:bg-white focus:border-purple-500"
                    id="Login-Password" type="password" placeholder="******************" required="true">
            </div>
        </div>
        <div class="md:flex md:items-center">
            <div class="md:w-1/3"></div>
            <div class="md:w-2/3">
                <button
                    class="shadow bg-teal-500 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
                    type="submit">
                    Sign In
                </button>
            </div>
        </div>
    </form>
</div>

<script src="/scripts/login.js"></script>